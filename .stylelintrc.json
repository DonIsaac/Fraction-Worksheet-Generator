{
  "extends": [
      "stylelint-config-standard",
      "stylelint-config-sass-guidelines"
    ],
    "rules": {
        "selector-max-id": 3,
        "max-nesting-depth": 5,
        "selector-max-compound-selectors": 5,
        "selector-no-qualifying-type": [true, { "ignore": ["attribute", "id", "class"] }],
        "string-quotes": "double"
    }
}
